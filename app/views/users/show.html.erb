<%= render partial: "layouts/nav", locals: {user: @user} %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<%= @posts.each do |p| %>
    <div class="row well">    
        <%= button_to " x ", post_path(p.id), :class => "btn btn-xs btn-danger pull-right", :method => :delete,  data: { confirm: "Are you sure you want to delete #{p.title}?" } %>
        <div class="col-sm-10">
            <h3><%= link_to "#{p.title}", post_path(p.id) %></h3>
                <%= button_to "Edit Post", edit_post_path(p.id), :class => "btn btn-xs btn-primary top-margin20", :method => :get  %> 
        </div>
    </div>
<% end %>

<p>
	<strong><a href="/posts/new">Create Post</a></strong>

</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
