
<p id="notice"><%= notice %></p>
<div class="col-md-12 top25">
  <h2>My Profile</h2>
  <div class="row">
    <div class="col-md-2">
      <p><strong>Name:</strong></p>
    </div>
    <div class="col-md-6">
      <p><%= @user.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p><strong>Username:</strong></p>
    </div>
    <div class="col-md-6">
      <p><%= @user.username %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p><strong>Email:</strong></p>
    </div>
    <div class="col-md-6">
      <p><%= @user.email %></p>
    </div>
  </div>

<h3>My Posts</h3>

  <div class="row top25">

     <div class="col-md-8">
      <% @posts.each do |p| %>
          <div class="row well"> 

              <%= button_to " x ", post_path(p.id), :class => "btn btn-xs btn-danger pull-right", :method => :delete,  data: { confirm: "Are you sure you want to delete #{p.title}?" } %>
              <div class="col-sm-6"> 
                  <p><%= link_to "#{p.title}", post_path(p.id) %></p>
                      <%= button_to "Edit Post", edit_post_path(p.id), :class => "btn btn-xs btn-primary top-margin20", :method => :get  %> 
              </div>
          </div>
      <% end %>    
    </div>    

  </div>
 
  <div class="row">
    <button class="btn btn-default"><a href="/posts/new">Create Post</a></button>
    <button class="btn btn-default"><%= link_to 'Edit', edit_user_path(@user) %></button>
  </div>

</div>

